{% extends "core.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col" class="border-0"><h1 class="h1 text-center">Countries</h1></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for country in countries %}
                        <tr scope="row">
                            <td class="listhover">
                                <a href="{{ root }}cruds/showCountries2.php?country={{ country }}">{{ country }}</a>
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ root }}" class="btn btn-outline-primary mb mt">Terug naar home</a>
            </div>
        </div>
    </div>

{% endblock %}
